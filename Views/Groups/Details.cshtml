@model Yoklama.Models.ViewModels.GroupDetailVm
@{
    ViewData["Title"] = "Grup Detayı";
}

<div class="container-fluid">
    <!-- Mobile Back Button -->
    <div class="mobile-back-button d-md-none">
        <a href="@Url.Action("Index", "Groups")" class="btn btn-light">
            <i class="fas fa-arrow-left me-2"></i>Geri
        </a>
    </div>

    <!-- Header Section -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-3 flex-wrap">
                <h2>@Model.Name (@Model.Code)</h2>
                <div class="btn-group">
                    <a asp-controller="Groups" asp-action="Edit" asp-route-id="@Model.GroupId" class="btn btn-primary">
                        <i class="fas fa-edit me-1"></i>
                        <span class="d-none d-sm-inline">Grubu Düzenle</span>
                        <span class="d-sm-none">Düzenle</span>
                    </a>
                    <a asp-controller="Reports" asp-action="Group" asp-route-id="@Model.GroupId" class="btn btn-secondary">
                        <i class="fas fa-chart-bar me-1"></i>
                        <span class="d-none d-sm-inline">Rapor</span>
                        <span class="d-sm-none">Rapor</span>
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Group Info Card -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-8 mt-3 mt-md-0">
                            <h5 class="card-title">@Model.Name</h5>
                            <p class="card-text">
                                <strong>Grup Kodu:</strong> @Model.Code<br>
                                @if (!string.IsNullOrEmpty(Model.Description))
                                {
                                    <strong>Açıklama:</strong> @Model.Description<br>
                                }
                            </p>
                        </div>
                        <div class="col-md-4 mt-3 mt-md-0">
                            <div class="row text-center">
                                <div class="col-6">
                                    <h4 class="text-primary">@Model.Lessons.Count</h4>
                                    <small class="text-muted">Toplam Ders</small>
                                </div>
                                <div class="col-6">
                                    <h4 class="text-success">@Model.Students.Count</h4>
                                    <small class="text-muted">Toplam Öğrenci</small>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Content Section -->
    <div class="row">
        <!-- Lessons Section -->
        <div class="col-12 col-lg-6 mb-4">
            <div class="card h-100">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">
                        <i class="fas fa-book me-2"></i>
                        Dersler
                        <span class="badge bg-primary ms-2">@Model.Lessons.Count</span>
                    </h5>
                    <a class="btn btn-sm btn-outline-primary" asp-controller="Lessons" asp-action="CreateLesson" asp-route-groupId="@Model.GroupId">
                        <i class="fas fa-plus me-1"></i>Yeni Ders
                    </a>
                </div>
                <div class="card-body">
                    @if (Model.Lessons.Any())
                    {
                        <!-- Desktop Table -->
                        <div class="desktop-table table-responsive">
                            <table class="table table-striped table-hover">
                                <thead>
                                    <tr>
                                        <th>Ders</th>
                                        <th>Öğretmen</th>
                                        <th>Gün</th>
                                        <th>Saat</th>
                                        <th class="text-center">İşlemler</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var l in Model.Lessons)
                                    {
                                        var dayNames = new[] { "", "Pazartesi", "Salı", "Çarşamba", "Perşembe", "Cuma", "Cumartesi", "Pazar" };
                                        <tr>
                                            <td class="fw-semibold">
                                                <span class="text-truncate-lg" data-tooltip="@l.Title">@l.Title</span>
                                            </td>
                                            <td>
                                                <span class="text-truncate-md" data-tooltip="@l.TeacherName">@l.TeacherName</span>
                                            </td>
                                            <td>
                                                <span class="badge bg-secondary">@dayNames[l.DayOfWeek]</span>
                                            </td>
                                            <td>
                                                <small class="text-muted">@l.StartTime.ToString(@"hh\:mm") - @l.EndTime.ToString(@"hh\:mm")</small>
                                            </td>
                                            <td class="text-center">
                                                <div class="btn-group btn-group-sm" role="group">
                                                    <a class="btn btn-outline-success" asp-controller="Lessons" asp-action="OpenSession" asp-route-lessonId="@l.Id" title="Oturumu Aç">
                                                        <i class="fas fa-play"></i>
                                                    </a>
                                                    <a class="btn btn-outline-warning" asp-controller="Lessons" asp-action="EditLesson" asp-route-id="@l.Id" title="Düzenle">
                                                        <i class="fas fa-edit"></i>
                                                    </a>
                                                    <form asp-controller="Lessons" asp-action="DeleteLesson" method="post" class="d-inline" onsubmit="return confirm('Bu dersi silmek istediğinizden emin misiniz?')">
                                                        @Html.AntiForgeryToken()
                                                        <input type="hidden" name="id" value="@l.Id" />
                                                        <button type="submit" class="btn btn-outline-danger" title="Sil">
                                                            <i class="fas fa-trash"></i>
                                                        </button>
                                                    </form>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>

                        <!-- Mobile Cards -->
                        <div class="mobile-cards">
                            @foreach (var l in Model.Lessons)
                            {
                                var dayNames = new[] { "", "Pazartesi", "Salı", "Çarşamba", "Perşembe", "Cuma", "Cumartesi", "Pazar" };
                                <div class="mobile-lesson-card">
                                    <div class="mobile-lesson-header">
                                        <div class="mobile-lesson-title">@l.Title</div>
                                        <div class="mobile-lesson-time">@l.StartTime.ToString(@"hh\:mm") - @l.EndTime.ToString(@"hh\:mm")</div>
                                    </div>
                                    <div class="mobile-lesson-info">
                                        <div class="mobile-lesson-info-item">
                                            <i class="fas fa-user"></i>
                                            @l.TeacherName
                                        </div>
                                        <div class="mobile-lesson-info-item">
                                            <i class="fas fa-calendar"></i>
                                            @dayNames[l.DayOfWeek]
                                        </div>
                                    </div>
                                    <div class="mobile-lesson-actions">
                                        <a class="mobile-btn mobile-btn-success" asp-controller="Lessons" asp-action="OpenSession" asp-route-lessonId="@l.Id">
                                            <i class="fas fa-play"></i>Oturumu Aç
                                        </a>
                                        <a class="mobile-btn mobile-btn-outline" asp-controller="Lessons" asp-action="EditLesson" asp-route-id="@l.Id">
                                            <i class="fas fa-edit"></i>Düzenle
                                        </a>
                                        <form asp-controller="Lessons" asp-action="DeleteLesson" method="post" class="d-inline" onsubmit="return confirm('Bu dersi silmek istediğinizden emin misiniz?')">
                                            @Html.AntiForgeryToken()
                                            <input type="hidden" name="id" value="@l.Id" />
                                            <button type="submit" class="mobile-btn mobile-btn-danger">
                                                <i class="fas fa-trash"></i>Sil
                                            </button>
                                        </form>
                                    </div>
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-4">
                            <i class="fas fa-book-open fa-3x text-muted mb-3"></i>
                            <h5 class="text-muted">Henüz ders eklenmemiş</h5>
                            <p class="text-muted">Bu gruba ders eklemek için yukarıdaki butonu kullanın</p>
                        </div>
                    }
                </div>
            </div>
        </div>

        <!-- Students Section -->
        <div class="col-12 col-lg-6 mb-4">
            <div class="card h-100">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">
                        <i class="fas fa-users me-2"></i>
                        Öğrenciler
                        <span class="badge bg-success ms-2">@Model.Students.Count</span>
                    </h5>
                    <a class="btn btn-sm btn-outline-success" asp-controller="Admin" asp-action="CreateStudent" asp-route-groupId="@Model.GroupId">
                        <i class="fas fa-user-plus me-1"></i>Yeni Öğrenci
                    </a>
                </div>
                <div class="card-body">
                    @if (Model.Students.Any())
                    {
                        <!-- Desktop Table -->
                        <div class="desktop-table table-responsive">
                            <table class="table table-striped table-hover">
                                <thead>
                                    <tr>
                                        <th>No</th>
                                        <th>Öğrenci</th>
                                        <th>Durum</th>
                                        <th class="text-center">İşlemler</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var s in Model.Students)
                                    {
                                        <tr>
                                            <td class="fw-bold text-primary">
                                                <span class="text-truncate-sm" data-tooltip="@s.StudentNumber">@s.StudentNumber</span>
                                            </td>
                                            <td class="fw-semibold">
                                                <span class="text-truncate-md" data-tooltip="@s.FullName">@s.FullName</span>
                                            </td>
                                            <td>
                                                @if (s.IsActive)
                                                {
                                                    <span class="badge bg-success">
                                                        <i class="fas fa-check-circle me-1"></i>Aktif
                                                    </span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-secondary">
                                                        <i class="fas fa-pause-circle me-1"></i>Pasif
                                                    </span>
                                                }
                                            </td>
                                            <td class="text-center">
                                                <a class="btn btn-sm btn-outline-primary" asp-controller="Reports" asp-action="Student" asp-route-id="@s.StudentId" title="Öğrenci Raporu">
                                                    <i class="fas fa-chart-line me-1"></i>Rapor
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>

                        <!-- Mobile Cards -->
                        <div class="mobile-cards">
                            @foreach (var s in Model.Students)
                            {
                                <div class="mobile-student-card">
                                    <div class="mobile-student-header">
                                        <div class="mobile-student-title">@s.FullName</div>
                                        <div class="mobile-student-number">@s.StudentNumber</div>
                                    </div>
                                    <div class="mobile-student-info">
                                        <div class="mobile-student-info-item">
                                            <i class="fas fa-info-circle"></i>
                                            @if (s.IsActive)
                                            {
                                                <span class="badge bg-success">
                                                    <i class="fas fa-check-circle me-1"></i>Aktif
                                                </span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-secondary">
                                                    <i class="fas fa-pause-circle me-1"></i>Pasif
                                                </span>
                                            }
                                        </div>
                                    </div>
                                    <div class="mobile-student-actions">
                                        <a class="mobile-btn mobile-btn-outline" asp-controller="Reports" asp-action="Student" asp-route-id="@s.StudentId">
                                            <i class="fas fa-chart-line"></i>Rapor
                                        </a>
                                    </div>
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-4">
                            <i class="fas fa-users fa-3x text-muted mb-3"></i>
                            <h5 class="text-muted">Henüz öğrenci eklenmemiş</h5>
                            <p class="text-muted">Bu gruba öğrenci eklemek için yukarıdaki butonu kullanın</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>


