@{
    ViewData["Title"] = "Admin Dashboard";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <!-- PC Header - Modern Layout -->
            <div class="d-none d-md-flex justify-content-between align-items-center mb-4">
                <div class="d-flex align-items-center gap-3">
                    <div class="icon-wrapper bg-primary text-white rounded-circle d-flex align-items-center justify-content-center" style="width: 48px; height: 48px;">
                        <i class="fas fa-tachometer-alt fa-lg"></i>
                    </div>
                    <div>
                        <h2 class="mb-0 text-dark fw-bold">Admin Dashboard</h2>
                        <p class="text-muted mb-0 small">Sistem yönetimi ve istatistikler</p>
                    </div>
                </div>
            </div>
            
            <!-- Mobile Header - Compact Layout -->
            <div class="d-md-none mb-3">
                <div class="d-flex align-items-center gap-2">
                    <div class="icon-wrapper bg-primary text-white rounded-circle d-flex align-items-center justify-content-center" style="width: 36px; height: 36px;">
                        <i class="fas fa-tachometer-alt"></i>
                    </div>
                    <div>
                        <h4 class="mb-0 text-dark fw-bold">Admin Dashboard</h4>
                        <p class="text-muted mb-0 small">Sistem yönetimi ve istatistikler</p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row g-3 my-3">
        <div class="col-12 col-lg-6 col-xl-3">
            <div class="stat-card d-flex justify-content-between align-items-center">
                <div>
                    <div>
                        <h3 class="stat-number">@ViewBag.Stats.TotalUsers</h3>
                        <p class="stat-label mb-0">Toplam Kullanıcı</p>
                    </div>
                </div>
                <div class="stat-icon">
                    <i class="fas fa-users"></i>
                </div>
            </div>
        </div>
        <div class="col-12 col-lg-6 col-xl-3">
            <div class="stat-card d-flex justify-content-between align-items-center">
                <div>
                    <div>
                        <h3 class="stat-number">@ViewBag.Stats.ActiveUsers</h3>
                        <p class="stat-label mb-0">Aktif Kullanıcı</p>
                    </div>

                </div>
                <div class="stat-icon">
                    <i class="fas fa-user-check"></i>
                </div>
            </div>
        </div>
        <div class="col-12 col-lg-6 col-xl-3">
            <div class="stat-card d-flex justify-content-between align-items-center">
                <div>
                    <div>
                        <h3 class="stat-number">@ViewBag.Stats.TotalStudents</h3>
                        <p class="stat-label mb-0">Toplam Öğrenci</p>
                    </div>
                </div>
                <div class="stat-icon">
                    <i class="fas fa-graduation-cap"></i>
                </div>
            </div>
        </div>
        <div class="col-12 col-lg-6 col-xl-3">
            <div class="stat-card d-flex justify-content-between align-items-center">
                <div>
                    <div>
                        <h3 class="stat-number">@ViewBag.Stats.TotalGroups</h3>
                        <p class="stat-label mb-0">Toplam Sınıflar</p>
                    </div>
                </div>
                <div class="stat-icon">
                    <i class="fas fa-users"></i>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Action Cards -->
<div class="row mb-4">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h5 class="card-title mb-0">Hızlı İşlemler</h5>
            </div>
            <div class="card-body">
                <div class="row action-row g-3 g-md-4">
                    <div class="col-12 col-sm-6 col-lg-4">
                        <a href="@Url.Action("Users", "Admin")" class="action-card-link">
                            <div class="action-card h-100">
                                <div class="action-card-icon text-primary"><i class="fas fa-users fa-2x"></i></div>
                                <div class="action-card-title">Kullanıcı Yönetimi</div>
                                <div class="action-card-text">Kullanıcıları ekle, düzenle, sil</div>
                            </div>
                        </a>
                    </div>
                    <div class="col-12 col-sm-6 col-lg-4">
                        <a href="@Url.Action("Students", "Admin")" class="action-card-link">
                            <div class="action-card h-100">
                                <div class="action-card-icon text-success"><i class="fas fa-graduation-cap fa-2x"></i>
                                </div>
                                <div class="action-card-title">Öğrenci Yönetimi</div>
                                <div class="action-card-text">Öğrencileri yönet</div>
                            </div>
                        </a>
                    </div>
                    <div class="col-12 col-sm-6 col-lg-4">
                        <a href="@Url.Action("Index", "Groups")" class="action-card-link">
                            <div class="action-card h-100">
                                <div class="action-card-icon text-info"><i class="fas fa-layer-group fa-2x"></i>
                                </div>
                                <div class="action-card-title">Grup Yönetimi</div>
                                <div class="action-card-text">Grupları ve dersleri yönet</div>
                            </div>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- System Info -->
<div class="row">
    <div class="col-12">
        <div class="card shadow-sm">
            <div class="card-header bg-light">
                <h5 class="card-title mb-0 text-dark fw-semibold">
                    <i class="fas fa-info-circle me-2 text-primary"></i>Sistem Bilgileri
                </h5>
            </div>
            <div class="card-body">
                <div class="row align-items-center">
                    <div class="col-6 col-md-4">
                        <div class="text-center p-3">
                            <div class="mb-2">
                                <i class="fas fa-user-check fa-2x text-primary"></i>
                            </div>
                            <h3 class="text-primary mb-1 fw-bold">@ViewBag.Stats.ActiveStudents</h3>
                            <small class="text-muted d-block">Aktif Öğrenci</small>
                        </div>
                    </div>
                    <div class="col-6 col-md-4">
                        <div class="text-center p-3">
                            <div class="mb-2">
                                <i class="fas fa-book fa-2x text-success"></i>
                            </div>
                            <h3 class="text-success mb-1 fw-bold">@ViewBag.Stats.TotalLessons</h3>
                            <small class="text-muted d-block">Toplam Ders</small>
                        </div>
                    </div>
                    <div class="col-12 col-md-4">
                        <div class="text-center p-3">
                            <button class="btn btn-success btn-lg px-4 py-3 rounded-pill">
                                <i class="fas fa-check-circle me-2"></i>
                                Sistem Çalışıyor
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
</div>
