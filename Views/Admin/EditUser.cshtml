@model Yoklama.Models.ViewModels.UserCreateEditVm
@{
    ViewData["Title"] = Model.IsEdit ? "Kullanıcı Düzenle" : "Yeni Kullanıcı";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-3">
                <h2>@ViewData["Title"]</h2>
                <a href="@Url.Action("Users", "Admin")" class="btn btn-secondary">
                    <i class="fas fa-arrow-left me-1"></i>
                    Geri Dön
                </a>
            </div>
        </div>
    </div>

    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-body">
                    <form asp-action="SaveUser" method="post">
                        @Html.AntiForgeryToken()
                        @Html.HiddenFor(m => m.Id)

                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="UserName" class="form-label">Kullanıcı Adı *</label>
                                    <input asp-for="UserName" class="form-control"
                                        placeholder="Kullanıcı adını girin" />
                                    <span asp-validation-for="UserName" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="FullName" class="form-label">Ad Soyad *</label>
                                    <input asp-for="FullName" class="form-control" placeholder="Ad ve soyadını girin" />
                                    <span asp-validation-for="FullName" class="text-danger"></span>
                                </div>
                            </div>
                            
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="Role" class="form-label">Rol *</label>
                                    <select asp-for="Role" class="form-select">
                                        <option value="@Yoklama.Models.Entities.UserRole.Teacher">Öğretmen</option>
                                        <option value="@Yoklama.Models.Entities.UserRole.Admin">Admin</option>
                                    </select>
                                    <span asp-validation-for="Role" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <div class="form-check mt-4">
                                        <input asp-for="IsActive" class="form-check-input" type="checkbox" />
                                        <label asp-for="IsActive" class="form-check-label">
                                            Aktif
                                        </label>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <hr />

                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="Password" class="form-label">
                                        @if (Model.IsEdit)
                                        {
                                            <text>Yeni Şifre (Boş bırakılırsa değişmez)</text>
                                        }
                                        else
                                        {
                                            <text>Şifre *</text>
                                        }
                                    </label>
                                    <input asp-for="Password" class="form-control" placeholder="Şifreyi girin" />
                                    <span asp-validation-for="Password" class="text-danger"></span>
                                    @if (!Model.IsEdit)
                                    {
                                        <div class="form-text">En az 6 karakter olmalıdır.</div>
                                    }
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="ConfirmPassword" class="form-label">
                                        @if (Model.IsEdit)
                                        {
                                            <text>Yeni Şifre Tekrar</text>
                                        }
                                        else
                                        {
                                            <text>Şifre Tekrar *</text>
                                        }
                                    </label>
                                    <input asp-for="ConfirmPassword" class="form-control"
                                        placeholder="Şifreyi tekrar girin" />
                                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        @if (Model.Role == Yoklama.Models.Entities.UserRole.Teacher && Model.AvailableLessons != null &&
                                                Model.AvailableLessons.Count > 0)
                        {
                            <hr />
                            <h5>Ders Atamaları</h5>
                            <div class="mb-3">
                                <label class="form-label">Atanmış Dersler</label>
                                <div class="row">
                                    @foreach (var lesson in Model.AvailableLessons)
                                    {
                                        <div class="col-md-6">
                                            <div class="form-check">
                                                <input class="form-check-input" type="checkbox" name="AssignedLessonIds"
                                                    value="@lesson.Id" id="lesson-@lesson.Id"
                                                    checked="@Model.AssignedLessonIds.Contains(lesson.Id)" />
                                                <label class="form-check-label" for="lesson-@lesson.Id">
                                                    @lesson.Title
                                                </label>
                                            </div>
                                        </div>
                                    }
                                </div>
                            </div>
                        }

                        <div class="d-flex justify-content-end gap-2">
                            <a href="@Url.Action("Users", "Admin")" class="btn btn-secondary">İptal</a>
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save me-1"></i>
                                @if (Model.IsEdit)
                                {
                                    <text>Güncelle</text>
                                }
                                else
                                {
                                    <text>Oluştur</text>
                                }
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}