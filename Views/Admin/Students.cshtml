@model Yoklama.Models.ViewModels.StudentListVm
@{
    ViewData["Title"] = "Öğrenci Yönetimi";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <!-- PC Header - Modern Layout -->
            <div class="d-none d-md-flex justify-content-between align-items-center mb-4">
                <div class="d-flex align-items-center gap-3">
                    <div class="icon-wrapper bg-primary text-white rounded-circle d-flex align-items-center justify-content-center" style="width: 48px; height: 48px;">
                        <i class="fas fa-graduation-cap fa-lg"></i>
                    </div>
                    <div>
                        <h2 class="mb-0 text-dark fw-bold">Öğrenci Yönetimi</h2>
                        <p class="text-muted mb-0 small">Öğrenci kayıtlarını yönetin</p>
                    </div>
                </div>
                <a href="@Url.Action("CreateStudent", "Admin")" class="btn btn-primary btn-lg px-4 py-2 shadow-sm">
                    <i class="fas fa-plus me-2"></i>
                    Yeni Öğrenci
                </a>
            </div>
            
            <!-- Mobile Header - Compact Layout -->
            <div class="d-md-none mb-3">
                <div class="d-flex align-items-center justify-content-between">
                    <div class="d-flex align-items-center gap-2">
                        <div class="icon-wrapper bg-primary text-white rounded-circle d-flex align-items-center justify-content-center" style="width: 36px; height: 36px;">
                            <i class="fas fa-graduation-cap"></i>
                        </div>
                        <div>
                            <h4 class="mb-0 text-dark fw-bold">Öğrenci Yönetimi</h4>
                        </div>
                    </div>
                    <a href="@Url.Action("CreateStudent", "Admin")" class="btn btn-primary btn-sm px-3">
                        <i class="fas fa-plus me-1"></i>
                        Yeni
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Modern Filters & Search -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card shadow-sm">
                <div class="card-body">
                    <!-- Desktop Filters -->
                    <div class="d-none d-md-block">
                        <div class="row g-3 align-items-end">
                            <div class="col-md-4 col-lg-3">
                                <label for="groupFilter" class="form-label fw-semibold">
                                    <i class="fas fa-filter me-2 text-primary"></i>Grup Filtresi
                                </label>
                                <select id="groupFilter" class="form-select">
                                    <option value="">Tüm Gruplar</option>
                                    @foreach (var group in Model.Groups)
                                    {
                                        <option value="@group.Name.ToLower()">@group.Name (@group.Code)</option>
                                    }
                                </select>
                            </div>
                            <div class="col-md-6 col-lg-5">
                                <label class="form-label fw-semibold">
                                    <i class="fas fa-search me-2 text-primary"></i>Arama
                                </label>
                                <div class="d-flex">
                                    <input type="search" id="searchInput" 
                                           class="form-control me-2" 
                                           placeholder="İsim veya numara ara..." />
                                    <button class="btn btn-primary" type="button" id="searchBtn">
                                        <i class="fas fa-search"></i>
                                    </button>
                                </div>
                            </div>
                            <div class="col-md-2 col-lg-4">
                                <button class="btn btn-outline-secondary w-100" onclick="clearFilters()">
                                    <i class="fas fa-times me-2"></i>Temizle
                                </button>
                            </div>
                        </div>
                    </div>
                    
                    <!-- Mobile Filters -->
                    <div class="d-md-none">
                        <div class="row g-2">
                            <div class="col-12">
                                <label for="groupFilterMobile" class="form-label fw-semibold fs-6">
                                    <i class="fas fa-filter me-1 text-primary"></i>Grup
                                </label>
                                <select id="groupFilterMobile" class="form-select fs-6">
                                    <option value="">Tüm Gruplar</option>
                                    @foreach (var group in Model.Groups)
                                    {
                                        <option value="@group.Name.ToLower()">@group.Name</option>
                                    }
                                </select>
                            </div>
                            <div class="col-8">
                                <label class="form-label fw-semibold fs-6">
                                    <i class="fas fa-search me-1 text-primary"></i>Arama
                                </label>
                                <input type="search" id="searchInputMobile" 
                                       class="form-control fs-6" 
                                       placeholder="İsim veya numara..." />
                            </div>
                            <div class="col-4">
                                <label class="form-label fw-semibold fs-6 text-white">.</label>
                                <div class="d-flex gap-1">
                                    <button class="btn btn-primary flex-fill fs-6" type="button" onclick="applyFilters()">
                                        <i class="fas fa-search me-1"></i>Ara
                                    </button>
                                    <button class="btn btn-outline-secondary fs-6" onclick="clearFilters()">
                                        <i class="fas fa-times me-1"></i>Temizle
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Stats Cards -->
    <div class="row mb-4 g-3">
        <div class="col-12 col-md-4">
            <div class="card bg-primary text-white shadow-sm">
                <div class="card-body text-center py-3">
                    <i class="fas fa-graduation-cap fa-2x mb-2"></i>
                    <h3 class="mb-1 fw-bold">@Model.TotalStudentsCount</h3>
                    <small>Toplam Öğrenci</small>
                </div>
            </div>
        </div>
        <div class="col-12 col-md-4">
            <div class="card bg-success text-white shadow-sm">
                <div class="card-body text-center py-3">
                    <i class="fas fa-check-circle fa-2x mb-2"></i>
                    <h3 class="mb-1 fw-bold">@Model.ActiveStudentsCount</h3>
                    <small>Aktif Öğrenci</small>
                </div>
            </div>
        </div>
        <div class="col-12 col-md-4">
            <div class="card bg-warning text-white shadow-sm">
                <div class="card-body text-center py-3">
                    <i class="fas fa-pause-circle fa-2x mb-2"></i>
                    <h3 class="mb-1 fw-bold">@Model.InactiveStudentsCount</h3>
                    <small>Pasif Öğrenci</small>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            <div class="card shadow-sm">
                <div class="card-body p-4">
                    @if (Model.Students.Any())
                    {
                        <!-- Desktop Table View -->
                        <div class="table-responsive d-none d-lg-block">
                            <table class="table table-hover align-middle">
                                <thead class="table-light">
                                    <tr>
                                        <th class="fw-semibold">
                                            <i class="fas fa-id-card me-2"></i>Öğrenci No
                                        </th>
                                        <th class="fw-semibold">
                                            <i class="fas fa-user me-2"></i>Ad Soyad
                                        </th>
                                        <th class="fw-semibold">
                                            <i class="fas fa-layer-group me-2"></i>Grup
                                        </th>
                                        <th class="fw-semibold">
                                            <i class="fas fa-toggle-on me-2"></i>Durum
                                        </th>
                                        <th class="text-center fw-semibold">
                                            <i class="fas fa-cogs me-2"></i>İşlemler
                                        </th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var student in Model.Students)
                                    {
                                        <tr class="@(!student.IsActive ? "table-secondary" : "")" style="height: 60px;"
                                            data-student="@student.FullName.ToLower()"
                                            data-number="@student.StudentNumber.ToLower()"
                                            data-group="@student.GroupName.ToLower()"
                                            data-active="@student.IsActive.ToString().ToLower()">
                                            <td class="py-3">
                                                <span class="text-truncate-sm" data-tooltip="@student.StudentNumber">@student.StudentNumber</span>
                                            </td>
                                            <td class="py-3">
                                                <span class="text-truncate-md" data-tooltip="@student.FullName">@student.FullName</span>
                                            </td>
                                            <td class="py-3">
                                                @{
                                                    var group = Model.Groups.FirstOrDefault(g => g.Id == student.GroupId);
                                                    if (group != null)
                                                    {
                                                        <span class="badge bg-info">@group.Name</span>
                                                    }
                                                }
                                            </td>
                                            <td class="py-3">
                                                @if (student.IsActive)
                                                {
                                                    <span class="badge bg-success">Aktif</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-secondary">Pasif</span>
                                                }
                                            </td>
                                            <td class="text-center py-3">
                                                <div class="btn-group" role="group">
                                                    <a href="@Url.Action("EditStudent", "Admin", new { id = student.StudentId })"
                                                       class="btn btn-sm btn-outline-primary" title="Düzenle">
                                                        <i class="fas fa-edit"></i>
                                                    </a>
                                                    <a href="@Url.Action("Student", "Reports", new { studentId = student.StudentId })"
                                                       class="btn btn-sm btn-outline-info" title="Rapor">
                                                        <i class="fas fa-chart-line"></i>
                                                    </a>
                                                    <button type="button" class="btn btn-sm btn-outline-danger"
                                                            onclick="confirmDelete('@student.StudentId', '@student.FullName')" title="Sil">
                                                        <i class="fas fa-trash"></i>
                                                    </button>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>

                        <!-- Mobile Card View -->
                        <div class="d-lg-none">
                            @foreach (var student in Model.Students)
                            {
                                <div class="card mb-4 student-card-mobile"
                                     data-student="@student.FullName.ToLower()"
                                     data-number="@student.StudentNumber.ToLower()"
                                     data-group="@student.GroupName.ToLower()"
                                     data-active="@student.IsActive.ToString().ToLower()">
                                    <div class="card-body p-4">
                                        <div class="mb-4">
                                            <h5 class="card-title mb-2 fw-bold text-dark">@student.FullName</h5>
                                            <p class="card-text text-muted mb-3">@student.StudentNumber</p>
                                            <div class="d-flex gap-2 flex-wrap">
                                                @{
                                                    var group = Model.Groups.FirstOrDefault(g => g.Id == student.GroupId);
                                                    if (group != null)
                                                    {
                                                        <span class="badge bg-light text-dark border">@group.Name</span>
                                                    }
                                                }
                                                @if (student.IsActive)
                                                {
                                                    <span class="badge bg-success">Aktif</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-secondary">Pasif</span>
                                                }
                                            </div>
                                        </div>
                                        <div class="d-flex flex-column gap-3">
                                            <a href="@Url.Action("EditStudent", "Admin", new { id = student.StudentId })"
                                               class="btn btn-outline-primary btn-lg" title="Öğrenci Bilgilerini Düzenle">
                                                <i class="fas fa-edit me-2"></i>Düzenle
                                            </a>
                                            <a href="@Url.Action("Student", "Reports", new { studentId = student.StudentId })"
                                               class="btn btn-outline-info btn-lg" title="Öğrenci Raporlarını Görüntüle">
                                                <i class="fas fa-chart-line me-2"></i>Rapor
                                            </a>
                                            <button type="button" class="btn btn-outline-danger btn-lg"
                                                    onclick="confirmDelete('@student.StudentId', '@student.FullName')"
                                                    title="Öğrenciyi Sistemden Sil">
                                                <i class="fas fa-trash me-2"></i>Sil
                                            </button>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>

                    }
                    else
                    {
                        <div class="text-center py-4">
                            <i class="fas fa-graduation-cap fa-3x text-muted mb-3"></i>
                            <h5 class="text-muted">Henüz öğrenci bulunmuyor</h5>
                            <p class="text-muted">İlk öğrenciyi oluşturmak için yukarıdaki "Yeni Öğrenci" butonunu kullanın.</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Delete Confirmation Modal (Modern) -->
<div class="modal fade" id="deleteModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content border-0 shadow-lg">
            <div class="modal-header text-white" style="background: linear-gradient(90deg, #e03131, #ff8787);">
                <h5 class="modal-title"><i class="fas fa-trash me-2"></i>Öğrenci Silinsin mi?</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body py-4">
                <div class="d-flex align-items-start">
                    <div class="me-3"><span class="badge bg-danger text-uppercase">Uyarı</span></div>
                    <div class="flex-fill">“<strong id="deleteStudentName"></strong>” öğrencisini silmek üzeresiniz. Bu işlem geri alınamaz.</div>
                </div>
            </div>
            <div class="modal-footer bg-light-subtle">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">İptal</button>
                <form id="deleteForm" method="post" action="@Url.Action("DeleteStudent", "Admin")" style="display: inline;">
                    @Html.AntiForgeryToken()
                    <input type="hidden" name="id" id="deleteStudentId" />
                    <button type="submit" class="btn btn-danger"><i class="fas fa-trash me-1"></i>Sil</button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function confirmDelete(studentId, studentName) {
            document.getElementById('deleteStudentName').textContent = studentName;
            document.getElementById('deleteStudentId').value = studentId;
            new bootstrap.Modal(document.getElementById('deleteModal')).show();
        }

        function clearFilters() {
            document.getElementById('groupFilter').value = '';
            document.getElementById('searchInput').value = '';
            window.location.href = '@Url.Action("Students", "Admin")';
        }

        // Empty search validation
        document.getElementById('searchForm').addEventListener('submit', function(e) {
            const searchInput = document.getElementById('searchInput');
            if (searchInput.value.trim() === '') {
                e.preventDefault();
                searchInput.focus();
                searchInput.classList.add('is-invalid');
                setTimeout(() => {
                    searchInput.classList.remove('is-invalid');
                }, 3000);
                return false;
            }
        });

        // Clear validation on input
        document.getElementById('searchInput').addEventListener('input', function() {
            this.classList.remove('is-invalid');
        });
    </script>
    
    <script>
        function clearFilters() {
            document.getElementById('searchInput').value = '';
            document.getElementById('groupFilter').value = '';
            if (document.getElementById('searchInputMobile')) {
                document.getElementById('searchInputMobile').value = '';
            }
            if (document.getElementById('groupFilterMobile')) {
                document.getElementById('groupFilterMobile').value = '';
            }
            applyFilters();
        }

        function applyFilters() {
            var searchDesktop = document.getElementById('searchInput').value.toLowerCase().trim();
            var searchMobile = document.getElementById('searchInputMobile') ? document.getElementById('searchInputMobile').value.toLowerCase().trim() : '';
            var search = searchDesktop || searchMobile;
            
            var groupFilterDesktop = document.getElementById('groupFilter').value.toLowerCase().trim();
            var groupFilterMobile = document.getElementById('groupFilterMobile') ? document.getElementById('groupFilterMobile').value.toLowerCase().trim() : '';
            var groupFilter = groupFilterDesktop || groupFilterMobile;

            // Desktop table rows
            var tableRows = document.querySelectorAll('table tbody tr[data-student]');
            // Mobile cards
            var mobileCards = document.querySelectorAll('.student-card-mobile[data-student]');

            var allItems = [...tableRows, ...mobileCards];

            allItems.forEach(function (item) {
                var student = (item.getAttribute('data-student') || '').toLowerCase();
                var number = (item.getAttribute('data-number') || '').toLowerCase();
                var group = (item.getAttribute('data-group') || '').toLowerCase();

                var matchSearch = !search || student.includes(search) || number.includes(search);
                var matchGroup = !groupFilter || group === groupFilter;

                if (matchSearch && matchGroup) {
                    item.style.display = '';
                } else {
                    item.style.display = 'none';
                }
            });
        }

        document.addEventListener('DOMContentLoaded', function () {
            var searchBtn = document.getElementById('searchBtn');
            var searchInput = document.getElementById('searchInput');
            var groupFilter = document.getElementById('groupFilter');
            var groupFilterMobile = document.getElementById('groupFilterMobile');
            var searchInputMobile = document.getElementById('searchInputMobile');

            if (searchBtn) searchBtn.addEventListener('click', applyFilters);
            if (searchInput) {
                searchInput.addEventListener('keypress', function (e) {
                    if (e.key === 'Enter') {
                        e.preventDefault();
                        applyFilters();
                    }
                });
            }
            if (searchInputMobile) {
                searchInputMobile.addEventListener('keypress', function (e) {
                    if (e.key === 'Enter') {
                        e.preventDefault();
                        applyFilters();
                    }
                });
            }

            // Auto-apply filters on change
            if (groupFilter) groupFilter.addEventListener('change', applyFilters);
            if (groupFilterMobile) groupFilterMobile.addEventListener('change', applyFilters);
        });
    </script>
}
