@model Yoklama.Models.ViewModels.StudentCreateEditVm
@{
    ViewData["Title"] = Model.IsEdit ? "Öğrenci Düzenle" : "Yeni Öğrenci";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-3">
                <h2>@ViewData["Title"]</h2>
                <a href="@Url.Action("Students", "Admin")" class="btn btn-secondary">
                    <i class="fas fa-arrow-left me-1"></i>
                    Geri Dön
                </a>
            </div>
        </div>
    </div>

    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-body">
                    <form asp-action="SaveStudent" method="post">
                        @Html.AntiForgeryToken()
                        @Html.HiddenFor(m => m.Id)
                        @if (Model.IsEdit)
                        {
                            <input type="hidden" name="Id" value="@Model.Id" />
                        }
                        
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="FirstName" class="form-label">Ad *</label>
                                    <input asp-for="FirstName" class="form-control" placeholder="Adını girin" />
                                    <span asp-validation-for="FirstName" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="LastName" class="form-label">Soyad *</label>
                                    <input asp-for="LastName" class="form-control" placeholder="Soyadını girin" />
                                    <span asp-validation-for="LastName" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="StudentNumber" class="form-label">Öğrenci Numarası *</label>
                                    <input asp-for="StudentNumber" class="form-control" placeholder="Öğrenci numarasını girin" />
                                    <span asp-validation-for="StudentNumber" class="text-danger"></span>
                                    <div class="form-text">Benzersiz bir numara olmalıdır.</div>
                                </div>
                                <div class="mb-3">
                                    <label asp-for="Phone" class="form-label">Telefon</label>
                                    <input asp-for="Phone" class="form-control" placeholder="5xxxxxxxxx" />
                                    <span asp-validation-for="Phone" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="GroupId" class="form-label">Grup *</label>
                                    <select asp-for="GroupId" class="form-select" asp-items="@(new Microsoft.AspNetCore.Mvc.Rendering.SelectList(Model.Groups.Select(g => new { g.Id, Text = $"{g.Name} ({g.Code})" }), "Id", "Text", Model.GroupId))">
                                        <option value="">Grup seçin...</option>
                                    </select>
                                    <span asp-validation-for="GroupId" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <div class="form-check">
                                        <input asp-for="IsActive" class="form-check-input" type="checkbox" />
                                        <label asp-for="IsActive" class="form-check-label">
                                            Aktif
                                        </label>
                                    </div>
                                    <div class="form-text">Pasif öğrenciler yoklama listelerinde görünmez.</div>
                                </div>
                            </div>
                        </div>

                        <hr />

                        <div class="d-flex justify-content-end gap-2">
                            <a href="@Url.Action("Students", "Admin")" class="btn btn-secondary">İptal</a>
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save me-1"></i>
                                @if (Model.IsEdit)
                                {
                                    <text>Güncelle</text>
                                }
                                else
                                {
                                    <text>Oluştur</text>
                                }
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
