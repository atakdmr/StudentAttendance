            var searchBtn = document.getElementById('adminLessonSearchBtn');

            function applyFilters() {
                var g = (groupEl && groupEl.value || '').toLowerCase();
                var t = (teacherEl && teacherEl.value || '').toLowerCase();
                var q = (searchEl && searchEl.value || '').toLowerCase().trim();

                var rows = document.querySelectorAll('table tbody tr');
                rows.forEach(function (row) {
                    var rg = (row.getAttribute('data-group') || '').toLowerCase();
                    var rt = (row.getAttribute('data-teacher') || '').toLowerCase();
                    var rv = (row.getAttribute('data-title') || '').toLowerCase();

                    var ok = true;
                    if (g && rg !== g) ok = false;
                    if (t && rt !== t) ok = false;
                    if (q && rv.indexOf(q) === -1) ok = false;
                    row.style.display = ok ? '' : 'none';
                });
            }

            if (groupEl) groupEl.addEventListener('change', applyFilters);
            if (teacherEl) teacherEl.addEventListener('change', applyFilters);
            if (searchBtn) searchBtn.addEventListener('click', applyFilters);
            if (searchEl) searchEl.addEventListener('keypress', function (e) { if (e.key === 'Enter') { e.preventDefault(); applyFilters(); } });
