                                                                onclick="showLessonDetails('@lesson.Id', '@lesson.Title', '@(lesson.Teacher?.FullName ?? "Öğretmen Yok")', '@(lesson.Group?.Name ?? "Grup Yok")', '@GetDayName(lesson.DayOfWeek)', '@lesson.StartTime.ToString(@"hh\:mm")', '@lesson.EndTime.ToString(@"hh\:mm")', '@(lesson.SessionId?.ToString() ?? "")')">
                                                            <i class="fas fa-info-circle"></i> Detaylar
                                                        </button>
                                                        <a href="@Url.Action("EditLesson", "Lessons", new { id = lesson.Id })" class="btn btn-sm" style="background: #3b82f6; border: 1px solid #3b82f6; color: white; border-radius: 6px; font-weight: 500;">
                                                            <i class="fas fa-edit"></i> Güncelle
                                                        </a>
