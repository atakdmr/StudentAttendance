@model Yoklama.Models.ViewModels.LessonsVm
@{
    ViewData["Title"] = "Dersler";
}

<div class="container-fluid lessons-page">
    <!-- PC Header - Modern Layout -->
    <div class="d-none d-md-flex justify-content-between align-items-center mb-4">
        <div class="d-flex align-items-center gap-3">
            <div>
                @if (Model.IsAdmin)
                {
                    <h2 class="mb-0 text-dark fw-bold">Tüm Dersler</h2>
                    <p class="text-muted mb-0 small">Sistemdeki tüm dersleri yönetin ve düzenleyin</p>
                }
                else
                {
                    <h2 class="mb-0 text-dark fw-bold">Derslerim</h2>
                    <p class="text-muted mb-0 small">Size atanmış dersleri görüntüleyin</p>
                }
            </div>
        </div>
        <div class="d-flex gap-2">
            <a asp-controller="Schedule" asp-action="Index" class="btn btn-outline-primary">
                <i class="fas fa-calendar-alt me-1"></i>Ders Programı
            </a>
            @if (Model.IsAdmin)
            {
                <a class="btn btn-primary" asp-action="CreateLesson">
                    <i class="fas fa-plus me-1"></i>Yeni Ders Ekle
                </a>
            }
        </div>
    </div>
    
    <!-- Mobile Header - Compact Layout -->
    <div class="d-md-none mb-3">
        <div class="d-flex align-items-center justify-content-between">
            <div class="d-flex align-items-center gap-2">
                <div class="icon-wrapper bg-primary text-white rounded-circle d-flex align-items-center justify-content-center" style="width: 36px; height: 36px;">
                    <i class="fas fa-chalkboard-teacher"></i>
                </div>
                <div>
                    @if (Model.IsAdmin)
                    {
                        <h4 class="mb-0 text-dark fw-bold">Tüm Dersler</h4>
                    }
                    else
                    {
                        <h4 class="mb-0 text-dark fw-bold">Derslerim</h4>
                    }
                </div>
            </div>
            <div class="d-flex gap-1">
                <a asp-controller="Schedule" asp-action="Index" class="btn btn-outline-primary btn-md fs-5">
                    <i class="fas fa-calendar-alt"></i>
                </a>
                @if (Model.IsAdmin)
                {
                    <a class="btn btn-primary btn-sm" asp-action="CreateLesson">
                        <i class="fas fa-plus"></i>
                    </a>
                }
            </div>
        </div>
    </div>

    @if (Model.IsAdmin)
    {
        <div class="row mb-3">
            <div class="col-12">
                <div class="card shadow-sm">
                    <div class="card-body">
                        <div class="row g-3 align-items-end">
                            @{ 
                                var adminGroups = Model.Lessons.Where(l => l.Group != null).Select(l => new { l.Group!.Id, l.Group!.Name }).Distinct().OrderBy(g => g.Name).ToList();
                                var adminTeachers = Model.Lessons.Where(l => l.Teacher != null).Select(l => new { l.Teacher!.Id, l.Teacher!.FullName }).Distinct().OrderBy(t => t.FullName).ToList();
                            }
                            <div class="col-md-3 col-sm-6">
                                <label for="adminGroupFilter" class="form-label fw-semibold"><i class="fas fa-layer-group me-2 text-primary"></i>Grup</label>
                                <select id="adminGroupFilter" class="form-select">
                                    <option value="">Tüm Gruplar</option>
                                    @foreach (var g in adminGroups)
                                    {
                                        <option value="@g.Name">@g.Name</option>
                                    }
                                </select>
                            </div>
                            <div class="col-md-3 col-sm-6">
                                <label for="adminTeacherFilter" class="form-label fw-semibold"><i class="fas fa-chalkboard-teacher me-2 text-primary"></i>Öğretmen</label>
                                <select id="adminTeacherFilter" class="form-select">
                                    <option value="">Tüm Öğretmenler</option>
                                    @foreach (var t in adminTeachers)
                                    {
                                        <option value="@t.FullName">@t.FullName</option>
                                    }
                                </select>
                            </div>
