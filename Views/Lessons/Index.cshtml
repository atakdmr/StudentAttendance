@model Yoklama.Models.ViewModels.LessonsVm
@{
    ViewData["Title"] = "Derslerim";
}

<div class="container-fluid">
    <div class="page-header d-flex justify-content-between align-items-center mb-4">
        <div>
            @if (Model.IsAdmin)
            {
                <h2>Tüm Dersler</h2>
                <p class="text-muted mb-0">Sistemdeki tüm dersleri yönetin ve düzenleyin</p>
            }
            else
            {
                <h2>Derslerim</h2>
                <p class="text-muted mb-0">Size atanmış dersleri görüntüleyin ve yoklama oturumu açın</p>
            }
        </div>
        <div class="d-flex gap-2">
            <a asp-controller="Schedule" asp-action="Index" class="btn btn-outline-primary">
                <i class="fas fa-calendar-alt me-1"></i>Ders Programı
            </a>
            @if (Model.IsAdmin)
            {
                <a class="btn btn-primary" asp-action="CreateLesson">
                    <i class="fas fa-plus me-1"></i>Yeni Ders Ekle
                </a>
            }
        </div>
    </div>

    <!-- Filtreleme Bölümü -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card shadow-sm">
                <div class="card-body">
                    <form method="get" class="row g-3">
                        <div class="col-lg-3 col-md-6">
                            <label for="groupId" class="form-label fw-semibold">
                                <i class="fas fa-layer-group me-2 text-primary"></i>Grup Seçimi
                            </label>
                            <select name="groupId" id="groupId" class="form-select">
                                <option value="">Tüm Gruplar</option>
                                @foreach (var group in ViewBag.Groups ?? new List<Yoklama.Models.Entities.Group>())
                                {
                                    <option value="@group.Id" selected="@(ViewBag.SelectedGroupId?.ToString() == group.Id.ToString())">
                                        @group.Name (@group.Code)
                                    </option>
                                }
                            </select>
                        </div>
                        @if (Model.IsAdmin)
                        {
                            <div class="col-lg-3 col-md-6">
                                <label for="teacherId" class="form-label fw-semibold">
                                    <i class="fas fa-chalkboard-teacher me-2 text-primary"></i>Öğretmen Seçimi
                                </label>
                                <select name="teacherId" id="teacherId" class="form-select">
                                    <option value="">Tüm Öğretmenler</option>
                                    @foreach (var teacher in ViewBag.Teachers ?? new List<Yoklama.Models.Entities.User>())
                                    {
                                        <option value="@teacher.Id" selected="@(ViewBag.SelectedTeacherId?.ToString() == teacher.Id.ToString())">
                                            @teacher.FullName
                                        </option>
                                    }
                                </select>
                            </div>
                        }
                        <div class="col-lg-3 col-md-6">
                            <label for="dayOfWeek" class="form-label fw-semibold">
                                <i class="fas fa-calendar-day me-2 text-primary"></i>Gün Seçimi
                            </label>
                            <select name="dayOfWeek" id="dayOfWeek" class="form-select">
                                <option value="">Tüm Günler</option>
                                <option value="1" selected="@(ViewBag.SelectedDayOfWeek?.ToString() == "1")">Pazartesi</option>
                                <option value="2" selected="@(ViewBag.SelectedDayOfWeek?.ToString() == "2")">Salı</option>
                                <option value="3" selected="@(ViewBag.SelectedDayOfWeek?.ToString() == "3")">Çarşamba</option>
                                <option value="4" selected="@(ViewBag.SelectedDayOfWeek?.ToString() == "4")">Perşembe</option>
                                <option value="5" selected="@(ViewBag.SelectedDayOfWeek?.ToString() == "5")">Cuma</option>
                                <option value="6" selected="@(ViewBag.SelectedDayOfWeek?.ToString() == "6")">Cumartesi</option>
                                <option value="7" selected="@(ViewBag.SelectedDayOfWeek?.ToString() == "7")">Pazar</option>
                            </select>
                        </div>
                        <div class="col-lg-3 col-md-6">
                            <label for="lessonTitle" class="form-label fw-semibold">
                                <i class="fas fa-book me-2 text-primary"></i>Ders Seçimi
                            </label>
                            <div class="input-group">
                                <input type="text" name="lessonTitle" id="lessonTitle" class="form-control" 
                                       value="@ViewBag.SelectedLessonTitle" placeholder="Ders adı ara...">
                                <button type="submit" class="btn btn-primary">
                                    <i class="fas fa-search"></i>
                                </button>
                            </div>
                        </div>
                        <div class="col-lg-3 col-md-6">
                            <label class="form-label fw-semibold">&nbsp;</label>
                            <div class="d-flex gap-2">
                                <a href="@Url.Action("Index")" class="btn btn-outline-secondary">
                                    <i class="fas fa-times me-1"></i>Temizle
                                </a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    @if (Model.Lessons.Any())
    {
        <div class="row">
            <div class="col-12">
                <div class="card border-0 shadow-sm desktop-table">
                    <div class="card-body p-0">
                        <div class="table-responsive">
                            <table class="table table-hover align-middle mb-0">
                                <thead class="table-light">
                                    <tr>
                                        <th class="border-0 py-3 px-4">
                                            <i class="fas fa-book me-2 text-primary"></i>Ders Bilgileri
                                        </th>
                                        @if (!Model.IsAdmin)
                                        {
                                            <th class="border-0 py-3 px-4">
                                                <i class="fas fa-calendar-day me-2 text-primary"></i>Gün & Saat
                                            </th>
                                            <th class="border-0 py-3 px-4">
                                                <i class="fas fa-users me-2 text-primary"></i>Grup Bilgileri
                                            </th>
                                        }
                                        @if (!Model.IsAdmin)
                                        {
                                            <th class="border-0 py-3 px-4">
                                                <i class="fas fa-info-circle me-2 text-primary"></i>Durum
                                            </th>
                                        }
                                        <th class="border-0 py-3 px-4 text-end">
                                            <i class="fas fa-cogs me-2 text-primary"></i>İşlemler
                                        </th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var lesson in Model.Lessons)
                                    {
                                        <tr class="border-bottom">
                                            <td class="py-3 px-4">
                                                <div class="d-flex align-items-center">
                                                    <div class="bg-primary bg-opacity-10 rounded-circle p-2 me-3 d-flex align-items-center justify-content-center" style="width: 40px; height: 40px;">
                                                        <i class="fas fa-book text-primary"></i>
                                                    </div>
                                                    <div class="flex-grow-1">
                                                        <div class="fw-semibold text-truncate" style="max-width: 200px;" title="@lesson.Title">@lesson.Title</div>
                                                        @if (Model.IsAdmin)
                                                        {
                                                            <small class="text-muted d-block">
                                                                <i class="fas fa-user me-1"></i>@(lesson.Teacher?.FullName ?? "Öğretmen Yok")
                                                            </small>
                                                            <small class="text-muted d-block">
                                                                <i class="fas fa-layer-group me-1"></i>@(lesson.Group?.Name ?? "Grup Yok")
                                                            </small>
                                                            <small class="text-muted">
                                                                @GetDayName(lesson.DayOfWeek) @($"{lesson.StartTime.Hours:D2}:{lesson.StartTime.Minutes:D2}")
                                                            </small>
                                                        }
                                                        else
                                                        {
                                                            <small class="text-muted">@GetDayName(lesson.DayOfWeek) @($"{lesson.StartTime.Hours:D2}:{lesson.StartTime.Minutes:D2}")</small>
                                                        }
                                                    </div>
                                                </div>
                                            </td>
                                            @if (!Model.IsAdmin)
                                            {
                                                <td class="py-3 px-4">
                                                    <div class="d-flex flex-column">
                                                        <div class="d-flex align-items-center">
                                                            <i class="fas fa-clock text-muted me-1 small"></i>
                                                            <span class="small fw-medium">@($"{lesson.StartTime.Hours:D2}:{lesson.StartTime.Minutes:D2}") - @($"{lesson.EndTime.Hours:D2}:{lesson.EndTime.Minutes:D2}")</span>
                                                        </div>
                                                        <small class="text-muted">@((int)(lesson.EndTime - lesson.StartTime).TotalMinutes) dakika</small>
                                                    </div>
                                                </td>
                                                <td class="py-3 px-4">
                                                    <div class="d-flex align-items-center">
                                                        <div class="bg-success bg-opacity-10 rounded-circle p-2 me-3 d-flex align-items-center justify-content-center" style="width: 40px; height: 40px;">
                                                            <i class="fas fa-users text-success"></i>
                                                        </div>
                                                        <div>
                                                            <div class="fw-semibold">@lesson.Group?.Name</div>
                                                            <small class="text-muted">@lesson.Group?.Code</small>
                                                        </div>
                                                    </div>
                                                </td>
                                                <td class="py-3 px-4">
                                                    @if (lesson.SessionStatus.HasValue)
                                                    {
                                                        @if (lesson.SessionStatus == Yoklama.Models.Entities.SessionStatus.Open)
                                                        {
                                                            <span class="badge bg-warning bg-opacity-20 text-white border border-warning">
                                                                <i class="fas fa-clock me-1"></i>Beklemede
                                                            </span>
                                                        }
                                                        else if (lesson.SessionStatus == Yoklama.Models.Entities.SessionStatus.Closed)
                                                        {
                                                            <span class="badge bg-success text-white">
                                                                <i class="fas fa-check me-1"></i>Kapatıldı
                                                            </span>
                                                        }
                                                        else if (lesson.SessionStatus == Yoklama.Models.Entities.SessionStatus.Finalized)
                                                        {
                                                            <span class="badge bg-success text-white">
                                                                <i class="fas fa-eye me-1"></i>Tamamlandı
                                                            </span>
                                                        }
                                                    }
                                                    else
                                                    {
                                                        @if (lesson.IsActive)
                                                        {
                                                            <span class="badge bg-primary bg-opacity-20 text-white border border-primary">
                                                                <i class="fas fa-book me-1"></i>Açık
                                                            </span>
                                                        }
                                                        else
                                                        {
                                                            <span class="badge bg-secondary bg-opacity-20 text-white border border-secondary">
                                                                <i class="fas fa-times me-1"></i>Pasif
                                                            </span>
                                                        }
                                                    }
                                                </td>
                                            }
                                            <td class="py-3 px-4 text-end">
                                                <div class="d-flex gap-2 justify-content-end align-items-center">
                                                    @if (Model.IsAdmin)
                                                    {
                                                        <button type="button" class="btn btn-sm" style="background: #f8fafc; border: 1px solid #e2e8f0; color: #475569; border-radius: 6px; font-weight: 500;" 
                                                                onclick="showLessonDetails('@lesson.Id', '@lesson.Title', '@(lesson.Teacher?.FullName ?? "Öğretmen Yok")', '@(lesson.Group?.Name ?? "Grup Yok")', '@GetDayName(lesson.DayOfWeek)', '@lesson.StartTime.ToString(@"hh\:mm")', '@lesson.EndTime.ToString(@"hh\:mm")', '@(lesson.SessionId?.ToString() ?? "")')">
                                                            <i class="fas fa-info-circle"></i> Detaylar
                                                        </button>
                                                        <a href="@Url.Action("EditLesson", "Lessons", new { id = lesson.Id })" class="btn btn-sm" style="background: #3b82f6; border: 1px solid #3b82f6; color: white; border-radius: 6px; font-weight: 500;">
                                                            <i class="fas fa-edit"></i> Güncelle
                                                        </a>
                                                        <button type="button" class="btn btn-sm" style="background: #ef4444; border: 1px solid #ef4444; color: white; border-radius: 6px; font-weight: 500;" 
                                                                onclick="deleteLesson(this)" 
                                                                data-lesson-id="@lesson.Id" 
                                                                data-lesson-title="@lesson.Title">
                                                            <i class="fas fa-trash"></i> Sil
                                                        </button>
                                                    }
                                                    else
                                                    {
                                                        @if (lesson.SessionStatus.HasValue)
                                                        {
                                                        @if (lesson.SessionStatus == Yoklama.Models.Entities.SessionStatus.Open)
                                                        {
                                                            <a class="btn btn-sm" style="background: #10b981; border: 1px solid #10b981; color: white; border-radius: 6px; font-weight: 500;" asp-controller="Attendance" asp-action="Session" asp-route-sessionId="@lesson.SessionId" title="Yoklama Al">
                                                                <i class="fas fa-clipboard-check me-1"></i>Yoklama Al
                                                            </a>
                                                        }
                                                        else if (lesson.SessionStatus == Yoklama.Models.Entities.SessionStatus.Closed)
                                                        {
                                                            <a class="btn btn-sm" style="background: #f8fafc; border: 1px solid #e2e8f0; color: #475569; border-radius: 6px; font-weight: 500;" asp-controller="Attendance" asp-action="Session" asp-route-sessionId="@lesson.SessionId" title="Detayları Gör">
                                                                <i class="fas fa-info-circle me-1"></i>Detaylar
                                                            </a>
                                                        }
                                                        else if (lesson.SessionStatus == Yoklama.Models.Entities.SessionStatus.Finalized)
                                                        {
                                                            <a class="btn btn-sm" style="background: #f8fafc; border: 1px solid #e2e8f0; color: #475569; border-radius: 6px; font-weight: 500;" asp-controller="Attendance" asp-action="Session" asp-route-sessionId="@lesson.SessionId" title="Sonuçları Gör">
                                                                <i class="fas fa-eye me-1"></i>Sonuçları Gör
                                                            </a>
                                                        }
                                                        }
                                                        else
                                                        {
                                                            <a class="btn btn-sm" style="background: #3b82f6; border: 1px solid #3b82f6; color: white; border-radius: 6px; font-weight: 500;" asp-action="OpenSession" asp-route-lessonId="@lesson.Id" title="Oturum Aç">
                                                                <i class="fas fa-play me-1"></i>Oturum Aç
                                                            </a>
                                                        }
                                                    }
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        
        <!-- Mobil Görünüm - Kartlar -->
        <div class="mobile-cards" style="display: none;">
            @foreach (var lesson in Model.Lessons)
            {
                <div class="mobile-lesson-card">
                    <div class="mobile-lesson-header">
                        <h5 class="mobile-lesson-title">@lesson.Title</h5>
                        @if (Model.IsAdmin)
                        {
                            <div class="mobile-lesson-time">
                                @GetDayName(lesson.DayOfWeek) @lesson.StartTime.ToString(@"hh\:mm") - @lesson.EndTime.ToString(@"hh\:mm")
                            </div>
                        }
                        else
                        {
                            <div class="mobile-lesson-time">
                                @lesson.StartTime.ToString(@"hh\:mm") - @lesson.EndTime.ToString(@"hh\:mm")
                            </div>
                        }
                    </div>
                    
                    @if (Model.IsAdmin)
                    {
                        <div class="mobile-lesson-info">
                            <div class="mobile-lesson-info-item">
                                <i class="fas fa-user"></i>
                                <span>@(lesson.Teacher?.FullName ?? "Öğretmen Yok")</span>
                            </div>
                            <div class="mobile-lesson-info-item">
                                <i class="fas fa-layer-group"></i>
                                <span>@(lesson.Group?.Name ?? "Grup Yok")</span>
                            </div>
                            <div class="mobile-lesson-info-item">
                                <i class="fas fa-info-circle"></i>
                                <span class="mobile-session-status @GetSessionStatusClass(lesson.SessionStatus)">
                                    @GetSessionStatusText(lesson.SessionStatus)
                                </span>
                            </div>
                        </div>
                    }
                    else
                    {
                        <div class="mobile-lesson-info">
                            <div class="mobile-lesson-info-item">
                                <i class="fas fa-layer-group"></i>
                                <span>@(lesson.Group?.Name ?? "Grup Yok")</span>
                            </div>
                            <div class="mobile-lesson-info-item">
                                <i class="fas fa-calendar-day"></i>
                                <span>@GetDayName(lesson.DayOfWeek)</span>
                            </div>
                            <div class="mobile-lesson-info-item">
                                <i class="fas fa-info-circle"></i>
                                <span class="mobile-session-status @GetSessionStatusClass(lesson.SessionStatus)">
                                    @GetSessionStatusText(lesson.SessionStatus)
                                </span>
                            </div>
                        </div>
                    }
                    
                    <div class="mobile-lesson-actions">
                        @if (Model.IsAdmin)
                        {
                            <button type="button" class="mobile-btn mobile-btn-outline-info" 
                                    onclick="showLessonDetailsWithActions('@lesson.Id', '@lesson.Title', '@(lesson.Teacher?.FullName ?? "Öğretmen Yok")', '@(lesson.Group?.Name ?? "Grup Yok")', '@GetDayName(lesson.DayOfWeek)', '@lesson.StartTime.ToString(@"hh\:mm")', '@lesson.EndTime.ToString(@"hh\:mm")', '@(lesson.SessionId?.ToString() ?? "")')">
                                <i class="fas fa-info-circle me-1"></i>Detaylar
                            </button>
                        }
                        else
                        {
                            @if (lesson.SessionStatus.HasValue)
                            {
                                @if (lesson.SessionStatus == Yoklama.Models.Entities.SessionStatus.Open)
                                {
                                    <a href="@Url.Action("Session", "Attendance", new { sessionId = lesson.SessionId })" 
                                       class="mobile-btn mobile-btn-success">
                                        <i class="fas fa-play me-1"></i>Yoklamaya Devam Et
                                    </a>
                                }
                                else if (lesson.SessionStatus == Yoklama.Models.Entities.SessionStatus.Closed)
                                {
                                    <a href="@Url.Action("Session", "Attendance", new { sessionId = lesson.SessionId })" 
                                       class="mobile-btn mobile-btn-outline-secondary">
                                        <i class="fas fa-info-circle me-1"></i>Detayları Gör
                                    </a>
                                }
                                else if (lesson.SessionStatus == Yoklama.Models.Entities.SessionStatus.Finalized)
                                {
                                    <a href="@Url.Action("Session", "Attendance", new { sessionId = lesson.SessionId })" 
                                       class="mobile-btn mobile-btn-outline-secondary">
                                        <i class="fas fa-eye me-1"></i>Sonuçları Gör
                                    </a>
                                }
                            }
                            else
                            {
                                <a href="@Url.Action("OpenSession", "Lessons", new { lessonId = lesson.Id })" 
                                   class="mobile-btn mobile-btn-primary">
                                    <i class="fas fa-play me-1"></i>Yoklama Başlat
                                </a>
                            }
                        }
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="row">
            <div class="col-12">
                <div class="card border-0 shadow-sm">
                    <div class="card-body text-center py-5">
                        <i class="fas fa-book fa-3x text-muted mb-3"></i>
                        <h4 class="text-muted mb-3">Henüz Ders Yok</h4>
                        <p class="text-muted mb-4">
                            @if (Model.IsAdmin)
                            {
                                <text>Sistemde henüz ders bulunmuyor. Yeni ders eklemek için yukarıdaki butonu kullanın.</text>
                            }
                            else
                            {
                                <text>Size henüz ders atanmamış. Ders programınızı kontrol etmek için aşağıdaki butonu kullanın.</text>
                            }
                        </p>
                        <div class="d-flex gap-2 justify-content-center">
                            @if (Model.IsAdmin)
                            {
                                <a class="btn btn-primary" asp-action="CreateLesson">
                                    <i class="fas fa-plus me-1"></i>Yeni Ders Ekle
                                </a>
                            }
                            <a asp-controller="Schedule" asp-action="Index" class="btn btn-outline-primary">
                                <i class="fas fa-calendar-alt me-1"></i>Ders Programı
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

@functions {
    string GetDayName(int dayOfWeek)
    {
        return dayOfWeek switch
        {
            1 => "Pazartesi",
            2 => "Salı",
            3 => "Çarşamba",
            4 => "Perşembe",
            5 => "Cuma",
            6 => "Cumartesi",
            7 => "Pazar",
            _ => "Bilinmeyen"
        };
    }
    
    string GetSessionStatusClass(Yoklama.Models.Entities.SessionStatus? status)
    {
        return status switch
        {
            Yoklama.Models.Entities.SessionStatus.Open => "mobile-session-open",
            Yoklama.Models.Entities.SessionStatus.Closed => "mobile-session-closed",
            Yoklama.Models.Entities.SessionStatus.Finalized => "mobile-session-closed",
            _ => "mobile-session-none"
        };
    }
    
    string GetSessionStatusText(Yoklama.Models.Entities.SessionStatus? status)
    {
        return status switch
        {
            Yoklama.Models.Entities.SessionStatus.Open => "Bekliyor",
            Yoklama.Models.Entities.SessionStatus.Closed => "Kapatıldı",
            Yoklama.Models.Entities.SessionStatus.Finalized => "Tamamlandı",
            _ => "Açık"
        };
    }
}

<!-- Delete Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Ders Sil</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <p id="deleteMessage">Dersini silmek istediğinizden emin misiniz?</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">İptal</button>
                <form id="deleteForm" method="post" style="display: inline;">
                    @Html.AntiForgeryToken()
                    <button type="submit" class="btn btn-danger">Sil</button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function deleteLesson(button) {
            var id = button.getAttribute('data-lesson-id');
            var title = button.getAttribute('data-lesson-title');
            
            // Modal mesajını güncelle
            var messageElement = document.getElementById('deleteMessage');
            if (messageElement) {
                messageElement.textContent = '"' + title + '" dersini silmek istediğinizden emin misiniz?';
            }
            
            // Form action'ını ayarla
            document.getElementById('deleteForm').action = '@Url.Action("DeleteLesson")' + '?id=' + id;
            
            // Modal'ı göster
            new bootstrap.Modal(document.getElementById('deleteModal')).show();
        }
        
        function deleteLessonFromModal(id, title) {
            // Mevcut detay modalını kapat
            var detailModal = document.querySelector('.modal.show');
            if (detailModal) {
                var bsModal = bootstrap.Modal.getInstance(detailModal);
                if (bsModal) {
                    bsModal.hide();
                }
            }
            
            // Modal mesajını güncelle
            var messageElement = document.getElementById('deleteMessage');
            if (messageElement) {
                messageElement.textContent = '"' + title + '" dersini silmek istediğinizden emin misiniz?';
            }
            
            // Form action'ını ayarla
            document.getElementById('deleteForm').action = '@Url.Action("DeleteLesson")' + '?id=' + id;
            
            // Delete modal'ını göster
            setTimeout(function() {
                new bootstrap.Modal(document.getElementById('deleteModal')).show();
            }, 300);
        }
        
        // Admin için ders detayları ve işlemler gösterme fonksiyonu (sadece admin kullanabilir)
        function showLessonDetailsWithActions(id, title, teacher, group, day, startTime, endTime, sessionId) {
            var modal = document.createElement('div');
            modal.className = 'modal fade';
            modal.innerHTML = `
                <div class="modal-dialog modal-lg">
                    <div class="modal-content">
                        <div class="modal-header bg-primary text-white">
                            <h5 class="modal-title mb-0">
