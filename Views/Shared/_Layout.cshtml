﻿@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor
<!DOCTYPE html>
<html lang="tr">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <title>@ViewData["Title"]</title>

    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">

    <!-- Icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css"
        integrity="sha512-DTOQO9RWCH3ppGqcWaEA1BIZOC6xxalwEsw9c2QQeAIftl+Vegovlnee1c9QX4TctnWMn13TZye+giMm8e2LwA=="
        crossorigin="anonymous" referrerpolicy="no-referrer">

    <!-- Bootstrap -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />

    <!-- ✅ OPTIMIZATION: Bundled & minified CSS (Development'ta ayrı dosyalar, Production'da bundle) -->
    @if (Context.Request.Host.Host == "localhost" || Environment.GetEnvironmentVariable("ASPNETCORE_ENVIRONMENT") == "Development")
    {
        <!-- Development: Ayrı CSS dosyaları (debug için) -->
        <link rel="stylesheet" href="~/css/variables.css" asp-append-version="true" />
        <link rel="stylesheet" href="~/css/base.css" asp-append-version="true" />
        <link rel="stylesheet" href="~/css/layout.css" asp-append-version="true" />
        <link rel="stylesheet" href="~/css/sidebar.css" asp-append-version="true" />
        <link rel="stylesheet" href="~/css/components.css" asp-append-version="true" />
        <link rel="stylesheet" href="~/css/utilities.css" asp-append-version="true" />
        <link rel="stylesheet" href="~/css/responsive.css" asp-append-version="true" />
        <link rel="stylesheet" href="~/css/special.css" asp-append-version="true" />
        <link rel="stylesheet" href="~/css/views.css" asp-append-version="true" />
    }
    else
    {
        <!-- Production: Bundled & minified CSS -->
        <link rel="stylesheet" href="~/css/bundle.min.css" asp-append-version="true" />
    }

    @await RenderSectionAsync("Styles", required: false)
</head>

<body>

    <div id="preloader">
        <div class="loader"></div>
    </div>

    @if (User.Identity!.IsAuthenticated)
    {
        <!-- Modern Sidebar -->
        <nav class="sidebar" id="sidebar">
            <div class="sidebar-header">
                <div class="d-flex align-items-center justify-content-between w-100">
                    <a asp-controller="Home" asp-action="Index"
                        class="text-light text-decoration-none d-flex align-items-center">
                        <div class="logo">
                            <i class="fas fa-graduation-cap"></i>
                        </div>
                        <div class="title">Yoklama Sistemi</div>
                    </a>
                    <button class="btn btn-md btn-light sidebar-close d-md-none" type="button" aria-label="Kapat">
                        <i class="fas fa-times"></i>
                    </button>
                </div>
            </div>

            <div class="sidebar-nav">
                <!-- Ana Sayfa -->
                <div class="nav-section">
                    <div class="nav-section-title">Genel</div>
                    <div class="nav-item">
                        <a href="@Url.Action("Index", "Home")" class="nav-link" data-page="home">
                            <div class="icon"><i class="fas fa-home"></i></div>
                            <div class="text">Ana Sayfa</div>
                        </a>
                    </div>
                    <div class="nav-item">
                        <a href="@Url.Action("Index", "Schedule")" class="nav-link" data-page="schedule">
                            <div class="icon"><i class="fas fa-calendar-alt"></i></div>
                            <div class="text">Ders Programı</div>
                        </a>
                    </div>
                </div>

                <!-- Öğretmen Menüsü -->
                @if (User.IsInRole("Teacher") || User.IsInRole("Admin"))
                {
                    <div class="nav-section">
                        <div class="nav-section-title">Öğretmen</div>
                        <div class="nav-item">
                            <a href="@Url.Action("Index", "Lessons")" class="nav-link" data-page="lessons">
                                <div class="icon"><i class="fas fa-chalkboard-teacher"></i></div>
                                <div class="text">Derslerim</div>
                            </a>
                        </div>
                        @if (User.IsInRole("Teacher"))
                        {

                            <div class="nav-item">
                                <a href="@Url.Action("Index", "Attendance")" class="nav-link" data-page="attendance">
                                    <div class="icon"><i class="fas fa-clipboard-check"></i></div>
                                    <div class="text">Yoklama</div>
                                </a>
                            </div>
                        }
                        <div class="nav-item">
                            <a href="@Url.Action("Index", "Reports")" class="nav-link" data-page="reports">
                                <div class="icon"><i class="fas fa-chart-bar"></i></div>
                                <div class="text">Raporlar</div>
                            </a>
                        </div>
                    </div>
                }


                <!-- Admin Menüsü -->
                @if (User.IsInRole("Admin"))
                {
                    <div class="nav-section">
                        <div class="nav-section-title">Yönetim</div>
                        <div class="nav-item">
                            <a href="@Url.Action("Index", "Admin")" class="nav-link" data-page="admin">
                                <div class="icon"><i class="fas fa-tachometer-alt"></i></div>
                                <div class="text">Dashboard</div>
                            </a>
                        </div>
                        <div class="nav-item">
                            <a href="@Url.Action("Index", "Groups")" class="nav-link" data-page="groups">
                                <div class="icon"><i class="fas fa-layer-group"></i></div>
                                <div class="text">Gruplar</div>
                            </a>
                        </div>
                        <div class="nav-item">
                            <a href="@Url.Action("Users", "Admin")" class="nav-link" data-page="admin-users">
                                <div class="icon"><i class="fas fa-users"></i></div>
                                <div class="text">Kullanıcılar</div>
                            </a>
                        </div>
                        <div class="nav-item">
                            <a href="@Url.Action("Students", "Admin")" class="nav-link" data-page="admin-students">
                                <div class="icon"><i class="fas fa-graduation-cap"></i></div>
                                <div class="text">Öğrenciler</div>
                            </a>
                        </div>
                        <div class="nav-item">
                            <a href="@Url.Action("Index", "Absences")" class="nav-link" data-page="absences">
                                <div class="icon"><i class="fas fa-user-times"></i></div>
                                <div class="text">Devamsızlar</div>
                            </a>
                        </div>
                        <div class="nav-item">
                            <a href="@Url.Action("Index", "Announcements")" class="nav-link" data-page="announcements">
                                <div class="icon"><i class="fas fa-bullhorn"></i></div>
                                <div class="text">Duyurular</div>
                            </a>
                        </div>
                    </div>
                }



                <!-- Hesap -->
                <div class="nav-section">
                    <div class="nav-section-title">Hesap</div>
                    <div class="nav-item">
                        <a href="#" class="nav-link"
                            onclick="document.getElementById('logoutForm').submit(); return false;">
                            <div class="icon"><i class="fas fa-sign-out-alt"></i></div>
                            <div class="text">Çıkış Yap</div>
                        </a>
                    </div>
                </div>
            </div>
        </nav>

        <!-- Account Sidebar (Mobile) -->
        <div class="account-sidebar d-md-none" id="accountSidebar">
            <div class="account-sidebar-header">
                <div class="d-flex align-items-center justify-content-between">
                    <h5 class="mb-0">Hesabım</h5>
                    <button class="btn btn-md btn-light account-close" type="button" aria-label="Kapat">
                        <i class="fas fa-times"></i>
                    </button>
                </div>
            </div>
            <div class="account-sidebar-content">
                <div class="account-user-info p-3">
                    <div class="d-flex align-items-center gap-3">
                        <div class="avatar bg-primary text-white rounded-circle d-inline-flex align-items-center justify-content-center"
                            style="width:48px;height:48px;">
                            <i class="fa-solid fa-user fa-lg"></i>
                        </div>
                        <div class="flex-grow-1">
                            <h6 class="mb-1 text-white">@(User.FindFirst("FullName")?.Value ?? User.Identity?.Name ?? "")
                            </h6>
                            <small class="text-light">@User.FindFirst(System.Security.Claims.ClaimTypes.Role)?.Value</small>
                        </div>
                    </div>
                </div>
                <div class="account-menu">
                    <a href="@Url.Action("Profile", "Account")" class="account-menu-item">
                        <i class="fa-solid fa-id-badge me-3"></i>
                        <span>Hesabım</span>
                    </a>
                    <a href="#" class="account-menu-item"
                        onclick="document.getElementById('logoutForm').submit(); return false;">
                        <i class="fa-solid fa-right-from-bracket me-3"></i>
                        <span>Çıkış Yap</span>
                    </a>
                </div>
            </div>
        </div>

        <!-- Main Content -->
        <main class="main-content">
            <div class="content-header">
                <div class="d-flex justify-content-between align-items-center gap-2">
                    <!-- Mobil için düzenleme -->
                    <div class="d-flex align-items-center gap-2 d-md-none">
                        <button class="sidebar-toggle btn btn-icon btn-sidebar rounded-circle" id="sidebarToggleBtn"
                            type="button" aria-label="Menüyü Aç/Kapat">
                            <i class="fas fa-bars-staggered"></i>
                        </button>
                        <div class="d-flex flex-column justify-content-center flex-grow-1 text-center">
                            <h1 class="h3 mb-0 mx-auto"><a asp-controller="Home" asp-action="Index"
                                    style="text-decoration: none; color: var(--primary-dark)">@ViewData["Title"]</a></h1>
                            @if (ViewBag.Breadcrumb != null)
                            {
                                <nav aria-label="breadcrumb" class="mx-auto">
                                    <ol class="breadcrumb mb-0 justify-content-center">
                                        @ViewBag.Breadcrumb
                                    </ol>
                                </nav>
                            }
                        </div>
                        <button class="account-toggle btn btn-icon rounded-circle btn-soft btn-user" type="button"
                            id="accountToggle" aria-label="Hesabımı Aç/Kapat">
                            <i class="fa-solid fa-user"></i>
                        </button>
                    </div>

                    <!-- Desktop için eski düzen -->
                    <div class="d-none d-md-flex justify-content-between align-items-center gap-2 w-100">
                        <div class="d-flex flex-column justify-content-center">
                            <h1 class="h3 mb-0"><a asp-controller="Home" asp-action="Index"
                                    style="text-decoration: none; color: var(--primary-dark)">@ViewData["Title"]</a></h1>
                            @if (ViewBag.Breadcrumb != null)
                            {
                                <nav aria-label="breadcrumb">
                                    <ol class="breadcrumb mb-0">
                                        @ViewBag.Breadcrumb
                                    </ol>
                                </nav>
                            }
                        </div>
                        <div class="d-flex align-items-center gap-1">
                            <div class="dropdown">
                                <button class="btn btn-icon rounded-circle btn-soft btn-user" type="button"
                                    id="userDropdownDesktop" data-bs-toggle="dropdown" aria-expanded="false"
                                    title="Hesabım">
                                    <i class="fa-solid fa-user"></i>
                                </button>
                                <ul class="dropdown-menu dropdown-menu-end shadow dropdown-menu-user"
                                    aria-labelledby="userDropdownDesktop" style="min-width: 280px;">
                                    <li class="dropdown-user-header px-3 py-3">
                                        <div class="d-flex align-items-center gap-2">
                                            <div class="avatar bg-primary text-white rounded-circle d-inline-flex align-items-center justify-content-center"
                                                style="width:36px;height:36px;"><i class="fa-solid fa-user"></i></div>
                                            <div class="d-flex flex-column">
                                                <strong>@(User.FindFirst("FullName")?.Value ?? User.Identity?.Name ??
                                                                                                    "")</strong>
                                            <span
                                                class="small text-muted">@User.FindFirst(System.Security.Claims.ClaimTypes.Role)?.Value</span>
                                        </div>
                                    </div>
                                </li>
                                <li>
                                    <hr class="dropdown-divider" />
                                </li>
                                <li><a class="dropdown-item" asp-controller="Account" asp-action="Profile"><i
                                            class="fa-solid fa-id-badge me-2"></i>Hesabım</a></li>
                                <li><a class="dropdown-item" href="#"
                                        onclick="document.getElementById('logoutForm').submit(); return false;"><i
                                            class="fa-solid fa-right-from-bracket me-2"></i>Çıkış Yap</a></li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>

            <div class="content-body">
            @{
                    string? modalMsg = null;
                    string modalType = "info";
                    if (TempData["Success"] is string s) { modalMsg = s; modalType = "success"; }
                    else if (TempData["Error"] is string e) { modalMsg = e; modalType = "danger"; }
                    else if (TempData["Warning"] is string w) { modalMsg = w; modalType = "warning"; }
                    else if (TempData["Info"] is string i) { modalMsg = i; modalType = "info"; }
                    else if (TempData["ConflictError"] is string c) { modalMsg = c; modalType = "conflict"; }
                }

                @if (!string.IsNullOrWhiteSpace(modalMsg))
                {
                    @if (modalType == "conflict")
                    {
                        <!-- Conflict Error - Use special conflict modal -->
                        <div id="temp-conflict-error" style="display: none;">@modalMsg</div>
                    }
                    else
                    {
                        <!-- Regular notification modal -->
                        <div class="modal fade" id="globalMsgModal" tabindex="-1" aria-hidden="true">
                            <div class="modal-dialog modal-dialog-centered">
                                <div class="modal-content border-0 shadow-lg">
                                    <div class="modal-header text-white"
                                        style="background: linear-gradient(90deg, #1f6feb, #7aa2f7);">
                                        <h5 class="modal-title">
                                            <i
                                                class="@(modalType == "success" ? "fas fa-check-circle" : modalType == "danger" ? "fas fa-exclamation-circle" : modalType == "warning" ? "fas fa-exclamation-triangle" : "fas fa-info-circle") me-2"></i>
                                            Bildirim
                                        </h5>
                                        <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"
                                            aria-label="Close"></button>
                                    </div>
                                    <div class="modal-body py-4">
                                        <div class="d-flex align-items-start">
                                            <div class="me-3">
                                                <span class="badge bg-@modalType text-uppercase">@modalType</span>
                                            </div>
                                            <div class="flex-fill">@modalMsg</div>
                                        </div>
                                    </div>
                                    <div class="modal-footer bg-light-subtle">
                                        <button type="button" class="btn btn-primary" data-bs-dismiss="modal">Tamam</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <script>
                            document.addEventListener('DOMContentLoaded', function () {
                                var el = document.getElementById('globalMsgModal');
                                if (el) new bootstrap.Modal(el).show();
                            });
                        </script>
                    }
                }

                <!-- Mobil Geri Butonu -->
                <div class="mobile-back-button d-md-none">
                    <button type="button" class="btn btn-outline-secondary btn-sm" onclick="goBack()">
                        <i class="fas fa-arrow-left me-1"></i>Geri
                    </button>
                </div>

                <div class="container-fluid px-2 px-sm-3 px-md-4">
                    @RenderBody()
                </div>
            </div>
        </main>

        <!-- Logout Form -->
        <form id="logoutForm" asp-controller="Account" asp-action="Logout" method="post" style="display: none;">
            @Html.AntiForgeryToken()
        </form>
    }
    else
    {
        <!-- Login Layout - Minimalist -->
        @RenderBody()
    }

    <!-- Scripts -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    
    <!-- ✅ OPTIMIZATION: Bundled & minified JS (Development'ta ayrı dosyalar, Production'da bundle) -->
    @if (Context.Request.Host.Host == "localhost" || Environment.GetEnvironmentVariable("ASPNETCORE_ENVIRONMENT") == "Development")
    {
        <!-- Development: Ayrı JS dosyaları (debug için) -->
        <script src="~/js/site.js" asp-append-version="true"></script>
        <script src="~/js/modern.js" asp-append-version="true"></script>
    }
    else
    {
        <!-- Production: Bundled & minified JS -->
        <script src="~/js/bundle.min.js" asp-append-version="true"></script>
    }

    <!-- Mobil Geri Butonu JavaScript -->
    <script>
        function goBack() {
            // Eğer history varsa geri git, yoksa ana sayfaya yönlendir
            if (window.history.length > 1) {
                window.history.back();
            } else {
                // Ana sayfaya yönlendir
                window.location.href = '@Url.Action("Index", "Home")';
            }
        }

        // Mobil cihazlarda geri butonunu gizle/göster
        document.addEventListener('DOMContentLoaded', function () {
            // Ana sayfa ise geri butonunu gizle
            const currentPath = window.location.pathname;
            const isHomePage = currentPath === '/' || currentPath === '/Home' || currentPath === '/Home/Index';

            if (isHomePage) {
                const backButton = document.querySelector('.mobile-back-button');
                if (backButton) {
                    backButton.style.display = 'none';
                }
            }
        });
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>