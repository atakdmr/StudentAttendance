@model Yoklama.Models.ViewModels.AnnouncementCreateVm
@{
    ViewData["Title"] = "Yeni Duyuru";
}

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h2 class="mb-0">Yeni Duyuru</h2>
                    <p class="text-muted mb-0">Sistem duyurusu oluşturun</p>
                </div>
                <div>
                    <a asp-action="Index" class="btn btn-outline-secondary">
                        <i class="fas fa-arrow-left me-2"></i>Geri
                    </a>
                </div>
            </div>
        </div>
    </div>

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="fas fa-exclamation-circle me-2"></i>@TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="row">
        <div class="col-lg-8">
            <div class="card">
                <div class="card-body">
                    <form asp-action="Create">
                        
                        
                        <div class="mb-3">
                            <label asp-for="Title" class="form-label">Başlık</label>
                            <input asp-for="Title" class="form-control" placeholder="Duyuru başlığını girin" />
                            <span asp-validation-for="Title" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Content" class="form-label">İçerik</label>
                            <textarea asp-for="Content" class="form-control" rows="8" placeholder="Duyuru içeriğini girin"></textarea>
                            <span asp-validation-for="Content" class="text-danger"></span>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="Priority" class="form-label">Öncelik</label>
                                    <select asp-for="Priority" class="form-select">
                                        <option value="1">Normal</option>
                                        <option value="2">Önemli</option>
                                        <option value="3">Kritik</option>
                                    </select>
                                    <span asp-validation-for="Priority" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <div class="form-check form-switch mt-4">
                                        <input asp-for="IsActive" class="form-check-input" type="checkbox" checked />
                                        <label asp-for="IsActive" class="form-check-label">Aktif</label>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="d-flex gap-2">
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save me-2"></i>Kaydet
                            </button>
                            <a asp-action="Index" class="btn btn-secondary">İptal</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        
        <div class="col-lg-4 my-4 my-lg-0">
            <div class="card">
                <div class="card-header">
                    <h6 class="mb-0">Öncelik Seviyeleri</h6>
                </div>
                <div class="card-body">
                    <div class="mb-2">
                        <span class="badge bg-info me-2">Normal</span>
                        <small class="text-muted">Günlük duyurular</small>
                    </div>
                    <div class="mb-2">
                        <span class="badge bg-warning me-2">Önemli</span>
                        <small class="text-muted">Dikkat edilmesi gereken</small>
                    </div>
                    <div class="mb-0">
                        <span class="badge bg-danger me-2">Kritik</span>
                        <small class="text-muted">Acil müdahale gerekli</small>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
