@model Yoklama.Models.ViewModels.ScheduleVm
@using System.Security.Claims

@{
    ViewData["Title"] = "Ders Programı";
    Guid.TryParse(User.FindFirst(ClaimTypes.NameIdentifier)?.Value, out Guid currentUserId);
}

<!-- Filtreleme Bölümü -->
<div class="row mb-4">
    <div class="col-12">
        <div class="card shadow-sm">
            <div class="card-body">
                <form method="get" class="row g-3">
                    <div class="col-md-3">
                        <label for="groupId" class="form-label fw-semibold">
                            <i class="fas fa-layer-group me-2 text-primary"></i>Grup Filtresi
                        </label>
                        <select name="groupId" id="groupId" class="form-select">
                            <option value="">Tüm Gruplar</option>
                            @foreach (var group in Model.Groups)
                            {
                                <option value="@group.Id" selected="@(Model.SelectedGroupId?.ToString() == group.Id.ToString())">
                                    @group.Name (@group.Code)
                                </option>
                            }
                        </select>
                    </div>
                    <div class="col-md-3">
                        <label for="teacherId" class="form-label fw-semibold">
                            <i class="fas fa-chalkboard-teacher me-2 text-primary"></i>Öğretmen Filtresi
                        </label>
                        <select name="teacherId" id="teacherId" class="form-select">
                            <option value="">Tüm Öğretmenler</option>
                            @foreach (var teacher in ViewBag.Teachers ?? new List<Yoklama.Models.Entities.User>())
                            {
                                <option value="@teacher.Id" selected="@(ViewBag.SelectedTeacherId?.ToString() == teacher.Id.ToString())">
                                    @teacher.FullName
                                </option>
                            }
                        </select>
                    </div>
                    <div class="col-md-3">
                        <label for="lessonTitle" class="form-label fw-semibold">
                            <i class="fas fa-book me-2 text-primary"></i>Ders Adı
                        </label>
                        <input type="text" name="lessonTitle" id="lessonTitle" class="form-control" 
                               value="@ViewBag.SelectedLessonTitle" placeholder="Ders adı ara...">
                    </div>
                    <div class="col-md-3">
                        <label class="form-label fw-semibold">&nbsp;</label>
                        <div class="d-flex gap-2">
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-filter me-1"></i>Filtrele
                            </button>
                            <a href="@Url.Action("Index")" class="btn btn-outline-secondary">
                                <i class="fas fa-times me-1"></i>Temizle
                            </a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h5 class="card-title mb-0">
                    <i class="fas fa-calendar-alt me-2"></i>
                    Haftalık Ders Programı
                </h5>
            </div>
            <div class="card-body">
                <div class="schedule-grid">
                    @foreach (var day in Model.Days)
                    {
                        <div class="day-column">
                            <div class="day-header">
                                <h6 class="day-title">@day.DayName</h6>
                            </div>
                            <div class="day-lessons">
                                @if (day.Lessons.Any())
                                {
                                    @foreach (var lesson in day.Lessons.OrderBy(l => l.StartTime))
                                    {
                                        <div class="lesson-card @(lesson.TeacherId == currentUserId ? "my-lesson" : "")">
                                            <div class="lesson-time">
                                                @lesson.StartTime.ToString(@"hh\:mm") - @lesson.EndTime.ToString(@"hh\:mm")
                                            </div>
                                            <div class="lesson-title">
                                                @lesson.Title
                                            </div>
                                            <div class="lesson-group">
                                                <i class="fas fa-layer-group me-1"></i>
                                                @lesson.GroupName
                                            </div>
                                            <div class="lesson-teacher">
                                                <i class="fas fa-user me-1"></i>
                                                @lesson.TeacherName
                                            </div>
                                            <div class="lesson-actions">
                                                <a href="@Url.Action("OpenSession", "Lessons", new { lessonId = lesson.LessonId })"
                                                   class="btn btn-sm btn-primary">
                                                    <i class="fas fa-play me-1"></i>
                                                    Yoklama Al
                                                </a>
                                            </div>
                                        </div>
                                    }
                                }
                                else
                                {
                                    <div class="no-lessons">
                                        <i class="fas fa-calendar-times"></i>
                                        <span>Ders yok</span>
                                    </div>
                                }
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<style>
.schedule-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 1rem;
}

.day-column {
    border: 1px solid #dee2e6;
    border-radius: 0.375rem;
    overflow: hidden;
}

.day-header {
    background-color: #f8f9fa;
    padding: 0.75rem;
    border-bottom: 1px solid #dee2e6;
}

.day-title {
    margin: 0;
    font-weight: 600;
    color: #495057;
}

.day-lessons {
    padding: 0.75rem;
    min-height: 200px;
}

.lesson-card {
    background-color: #fff;
    border: 1px solid #e9ecef;
    border-radius: 0.25rem;
    padding: 0.75rem;
    margin-bottom: 0.5rem;
    box-shadow: 0 0.125rem 0.25rem rgba(0, 0, 0, 0.075);
}

.lesson-time {
    font-weight: 600;
    color: #007bff;
    font-size: 0.875rem;
    margin-bottom: 0.25rem;
}

.lesson-title {
    font-weight: 500;
    margin-bottom: 0.25rem;
}

.lesson-group, .lesson-teacher {
    font-size: 0.75rem;
    color: #6c757d;
    margin-bottom: 0.25rem;
}

.lesson-actions {
    margin-top: 0.5rem;
}

.no-lessons {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    color: #6c757d;
    font-size: 0.875rem;
    padding: 2rem 0;
}

.no-lessons i {
    font-size: 2rem;
    margin-bottom: 0.5rem;
    opacity: 0.5;
}

.my-lesson {
    border: 2px solid transparent;
    border-radius: 5px;
    background: linear-gradient(white, white) padding-box,
                linear-gradient(to right, #007bff, #6610f2) border-box;
    box-shadow: 0 0.25rem 0.5rem rgba(0, 0, 0, 0.1);
}
</style>