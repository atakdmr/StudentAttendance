@model IEnumerable<Yoklama.Models.Entities.AttendanceSession>

@{
    ViewData["Title"] = "Yoklama Raporları";
    var groups = ViewBag.Groups as List<Yoklama.Models.Entities.Group>;
    var selectedGroupId = ViewBag.SelectedGroupId as Guid?;
    var isAdmin = ViewBag.IsAdmin as bool? ?? false;
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2>Yoklama Raporları</h2>
            <p class="text-muted mb-0">Tamamlanmış yoklama oturumlarını görüntüleyin ve raporları inceleyin</p>
        </div>
        <div>
            <a asp-controller="Attendance" asp-action="Index" class="btn btn-outline-primary">
                <i class="fas fa-clipboard-check me-1"></i>Yoklama Oturumları
            </a>
        </div>
    </div>

    @if (isAdmin && groups?.Any() == true)
    {
        <div class="row mb-4">
            <div class="col-12">
                <div class="card shadow-sm">
                    <div class="card-body">
                        <div class="row g-3 align-items-end">
                            <div class="col-md-4 col-lg-3">
                                <label for="groupFilter" class="form-label fw-semibold">
                                    <i class="fas fa-filter me-2 text-primary"></i>Grup Filtresi
                                </label>
                                <form method="get" id="groupForm">
                                    <select name="groupId" id="groupFilter" class="form-select"
                                        onchange="this.form.submit()">
                                        <option value="">Tüm Gruplar</option>
                                        @foreach (var group in groups)
                                        {
                                            if (selectedGroupId == group.Id)
                                            {
                                                <option value="@group.Id" selected>@group.Name (@group.Code)</option>
                                            }
                                            else
                                            {
                                                <option value="@group.Id">@group.Name (@group.Code)</option>
                                            }
                                        }
                                    </select>
                                </form>
                            </div>
                            <div class="col-md-2">
                                <button class="btn btn-outline-secondary w-100" onclick="clearGroupFilter()">
                                    <i class="fas fa-times me-2"></i>Temizle
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }

    @if (!Model.Any())
    {
        <div class="row">
            <div class="col-12">
                <div class="card border-0 shadow-sm">
                    <div class="card-body text-center py-5">
                        <i class="fas fa-chart-bar fa-3x text-muted mb-3"></i>
                        <h4 class="text-muted mb-3">Henüz Rapor Yok</h4>
                        <p class="text-muted mb-4">
                            Tamamlanmış yoklama oturumu bulunmuyor. Raporları görmek için önce yoklama oturumlarını
                            tamamlayın.
                        </p>
                        <div class="d-flex gap-2 justify-content-center">
                            <a asp-controller="Attendance" asp-action="Index" class="btn btn-primary">
                                <i class="fas fa-clipboard-check me-1"></i>Yoklama Oturumları
                            </a>
                            <a asp-controller="Schedule" asp-action="Index" class="btn btn-outline-primary">
                                <i class="fas fa-calendar-alt me-1"></i>Ders Programı
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="row">
            <div class="col-12">
                <div class="card border-0 shadow-sm">
                    <div class="card-body p-0">
                        <div class="table-responsive">
                            <table class="table table-hover align-middle mb-0">
                                <thead class="table-light">
                                    <tr>
                                        <th class="border-0 py-3 px-4">
                                            <i class="fas fa-book me-2 text-primary"></i>Ders
                                        </th>
                                        <th class="border-0 py-3 px-4">
                                            <i class="fas fa-users me-2 text-primary"></i>Grup
                                        </th>
                                        <th class="border-0 py-3 px-4">
                                            <i class="fas fa-calendar-alt me-2 text-primary"></i>Tarih & Saat
                                        </th>
                                        <th class="border-0 py-3 px-4">
                                            <i class="fas fa-chalkboard-teacher me-2 text-primary"></i>Öğretmen
                                        </th>
                                        <th class="border-0 py-3 px-4 text-end">
                                            <i class="fas fa-cogs me-2 text-primary"></i>İşlemler
                                        </th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var session in Model)
                                    {
                                        <tr class="border-bottom">
                                            <td class="py-3 px-4">
                                                <div class="d-flex align-items-center">
                                                    <div class="bg-primary bg-opacity-10 rounded-circle p-2 me-3 d-flex align-items-center justify-content-center"
                                                        style="width: 40px; height: 40px;">
                                                        <i class="fas fa-book text-primary"></i>
                                                    </div>
                                                    <div class="flex-grow-1">
                                                        <div class="fw-semibold text-truncate" style="max-width: 200px;"
                                                            title="@session.Lesson.Title">@session.Lesson.Title</div>
                                                        <small class="text-muted">@GetDayName(session.Lesson.DayOfWeek)</small>
                                                    </div>
                                                </div>
                                            </td>
                                            <td class="py-3 px-4">
                                                <div class="d-flex align-items-center">
                                                    <div class="bg-success bg-opacity-10 rounded-circle p-2 me-3 d-flex align-items-center justify-content-center"
                                                        style="width: 40px; height: 40px;">
                                                        <i class="fas fa-users text-success"></i>
                                                    </div>
                                                    <div>
                                                        <div class="fw-semibold">@session.Group.Name</div>
                                                        <small class="text-muted">@session.Group.Code</small>
                                                    </div>
                                                </div>
                                            </td>
                                            <td class="py-3 px-4">
                                                <div class="d-flex flex-column">
                                                    <span class="fw-semibold">@session.ScheduledAt.ToString("dd.MM.yyyy")</span>
                                                    <span class="text-muted small">@session.ScheduledAt.ToString("HH:mm")</span>
                                                </div>
                                            </td>
                                            <td class="py-3 px-4">
                                                <div class="d-flex align-items-center">
                                                    <div class="bg-info bg-opacity-10 rounded-circle p-2 me-3 d-flex align-items-center justify-content-center"
                                                        style="width: 40px; height: 40px;">
                                                        <i class="fas fa-chalkboard-teacher text-info"></i>
                                                    </div>
                                                    <div>
                                                        <div class="fw-semibold">@session.Teacher.FullName</div>
                                                    </div>
                                                </div>
                                            </td>
                                            <td class="py-3 px-4 text-end">
                                                <a class="btn btn-outline-secondary btn-sm" asp-controller="Attendance" asp-action="Session"
                                                    asp-route-sessionId="@session.Id">
                                                    <i class="fas fa-eye me-1"></i>Gözlemle
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

@functions {
    string GetDayName(int dayOfWeek)
    {
        return dayOfWeek switch
        {
            1 => "Pazartesi",
            2 => "Salı",
            3 => "Çarşamba",
            4 => "Perşembe",
            5 => "Cuma",
            6 => "Cumartesi",
            7 => "Pazar",
            _ => ""
        };
    }
}

@section Scripts {
    <script>
        function clearGroupFilter() {
            window.location.href = '@Url.Action("Index", "Reports")';
        }
    </script>
}
